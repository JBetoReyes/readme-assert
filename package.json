{
  "name": "readme-assert",
  "version": "3.0.0",
  "engines": {
    "node": ">=4"
  },
  "description": "Run code blocks in your readme as test",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "scripts": {
    "build": "babel src/. -d lib/. --ignore=spec.js",
    "test:spec": "mocha --require babel-register --reporter mocha-tap13 src/**/*.spec.js",
    "test:readme": "babel-node src/cli.js --require babel-register --main ./src ",
    "test": "npm run test:readme && npm run test:spec",
    "lint": "standard src/**/*.js",
    "prepublish": "npm run build"
  },
  "author": {
    "name": "Sigurd Fosseng",
    "email": "sigurd@fosseng.net",
    "url": "http://laat.io"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/laat/readme-assert.git"
  },
  "dependencies": {
    "assert-simple-tap": "1.0.0",
    "babel-core": "^6.4.5",
    "babel-generator": "^6.4.5",
    "babel-plugin-transform-comment-to-assert": "^1.0.0",
    "babel-plugin-transform-rename-import": "^1.0.0",
    "babel-traverse": "^6.4.5",
    "docopt": "~0.6.2",
    "gfm-code-blocks": "^0.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.4.3",
    "chai": "^3.4.1",
    "mocha": "^2.3.4",
    "mocha-tap13": "0.0.3",
    "standard": "^6.0.8"
  },
  "files": [
    "lib"
  ],
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
